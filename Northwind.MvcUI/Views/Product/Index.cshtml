@model   Northwind.MvcUI.Models.ProductViewModel
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <table border="1">
        <thead>
            <tr>
                <th>Ürün İsmi</th>
                <th>Ürün Fiyatı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                </tr>
            }
        </tbody>
    </table>